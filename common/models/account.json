{
  "name": "Account",
  "base": "User",
  "excludeBaseProperties": [
    "email", "emailVerified", "realm", "verificationToken"
  ],
  "hidden": [
    "seCounter",
    "seSecretAscii",
    "seSecretHex",
    "seSecretBase32",
    "seSecretUrl"
  ],
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "adamantAddress": {
      "default": null,
      "required": false,
      "type": "string"
    },
    "locale": {
      "default": "en",
      "required": true,
      "type": "string"
    },
    "password": {
      "required": true,
      "type": "string"
    },
    "se2faEnabled": {
      "type": "boolean"
    },
    "seCounter": {
      "type": "number"
    },
    "seSecretAscii": {
      "type": "string"
    },
    "seSecretHex": {
      "type": "string"
    },
    "seSecretBase32": {
      "type": "string"
    },
    "seSecretUrl": {
      "type": "string"
    },
    "username": {
      "required": true,
      "type": "string"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "disable2fa"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "updateLocale"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "updateAdamantAddress"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "verifyHotp"
    }
  ],
  "methods": {
    "prototype.disable2fa": {
      "description": "Disable 2FA for account",
      "http": [
        {
          "path": "/disable2fa",
          "verb": "get"
        }
      ],
      "returns": [
        {
          "arg": "data",
          "description": "",
          "root": true,
          "type": "Account"
        }
      ]
    },
    "prototype.updateLocale": {
      "accepts": [
        {
          "arg": "locale",
          "description": "",
          "required": true,
          "type": "string"
        }
      ],
      "description": "Update account's i18n locale",
      "http": [
        {
          "path": "/locale",
          "verb": "post"
        }
      ],
      "returns": [
        {
          "arg": "data",
          "description": "",
          "root": true,
          "type": "Account"
        }
      ]
    },
    "prototype.updateAdamantAddress": {
      "accepts": [
        {
          "arg": "adamantAddress",
          "description": "",
          "required": true,
          "type": "string"
        }
      ],
      "description": "Update account's ADAMANT address and regenerate secret key",
      "http": [
        {
          "path": "/adamantAddress",
          "verb": "post"
        }
      ],
      "returns": [
        {
          "arg": "data",
          "description": "",
          "root": true,
          "type": "Account"
        }
      ]
    },
    "prototype.verifyHotp": {
      "accepts": [
        {
          "arg": "hotp",
          "description": "",
          "required": true,
          "type": "string"
        }
      ],
      "description": "Verify HOTP to enable 2FA or to complete login",
      "http": [
        {
          "path": "/verifyHotp",
          "verb": "get"
        }
      ],
      "returns": [
        {
          "arg": "data",
          "description": "",
          "root": true,
          "type": "object"
        }
      ]
    }
  }
}
