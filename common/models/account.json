{
  "name": "Account",
  "base": "User",
  "excludeBaseProperties": [
    "email", "emailVerified", "realm", "verificationToken"
  ],
  "hidden": [
    "seCounter",
    "seSecretAscii",
    "seSecretHex",
    "seSecretBase32",
    "seSecretUrl"
  ],
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "adamantAddress": {
      "default": null,
      "required": false,
      "type": "string"
    },
    "locale": {
      "default": "en",
      "required": true,
      "type": "string"
    },
    "password": {
      "required": true,
      "type": "string"
    },
    "se2faEnabled": {
      "type": "boolean"
    },
    "seCounter": {
      "type": "number"
    },
    "seSecretAscii": {
      "type": "string"
    },
    "seSecretHex": {
      "type": "string"
    },
    "seSecretBase32": {
      "type": "string"
    },
    "seSecretUrl": {
      "type": "string"
    },
    "username": {
      "required": true,
      "type": "string"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "adamantAddress"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "disable2fa"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "locale"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "verifyHotp"
    }
  ],
  "methods": {
    "adamantAddress": {
      "accepts": [
        {
          "arg": "adamantAddress",
          "type": "string"
        },
        {
          "arg": "id",
          "type": "number"
        }
      ],
      "description": "Change account's ADAMANT address and regenerate secret key",
      "http": {
        "verb": "post",
        "path": "/adamantAddress"
      },
      "returns": {
        "arg": "data",
        "type": "Account",
        "root": true
      }
    },
    "disable2fa": {
      "accepts": [
        {
          "arg": "id",
          "type": "number"
        }
      ],
      "description": "Disable 2FA for account",
      "http": {
        "verb": "get",
        "path": "/disable2fa"
      },
      "returns": {
        "arg": "data",
        "type": "boolean",
        "root": true
      }
    },
    "locale": {
      "accepts": [
        {
          "arg": "locale",
          "type": "string"
        },
        {
          "arg": "id",
          "type": "number"
        }
      ],
      "description": "Change account's i18n locale",
      "http": {
        "verb": "post",
        "path": "/locale"
      },
      "returns": {
        "arg": "data",
        "type": "boolean",
        "root": true
      }
    },
    "verifyHotp": {
      "accepts": [
        {
          "arg": "hotp",
          "type": "string"
        },
        {
          "arg": "id",
          "type": "number"
        }
      ],
      "description": "Verify HOTP first time to enable 2FA",
      "http": {
        "verb": "get",
        "path": "/verifyHotp"
      },
      "returns": {
        "arg": "data",
        "type": "boolean",
        "root": true
      }
    }
  }
}
